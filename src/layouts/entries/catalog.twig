{% extends body %}

{% block main %}
	{% include component('~Goods') with goods|merge({ bemMix: 'Page__goods' }) %}

	{% include component('~VideoCard') with process|merge({ bemMix: 'Page__process' }) %}
{% endblock %}

{% block modals %}
	{% for good in goods.list %}
		{% include component('~Modal') with {
			Component: 'FormSelect',
			data: orderForm|merge({ goodId: good.id }),
			modalId: 'good-' ~ good.id
		} %}
	{% endfor %}
{% endblock %}
