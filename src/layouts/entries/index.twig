{% extends body %}

{% block main %}
	{% include component('~PromoLinks') with promoLinks|merge({ bemMix: 'Page__promoLinks' }) %}

	{% include component('~GoodSection') with weekGood|merge({ bemMix: 'Page__goodSection' }) %}

	{% include component('~IconableList') with advantages|merge({ bemMix: 'Page__iconableList Page__decorable' }) %}

	{% include component('~Reviews') with reviews %}

	{% include component('~Contacts') with contacts %}
{% endblock %}

{% block modal %}
	{% include component('~Modal') with {
		Component: 'FormSelect',
		data: orderForm|merge({ goodId: weekGood.id }),
		modalId: weekGood.id
	} %}
{% endblock %}
